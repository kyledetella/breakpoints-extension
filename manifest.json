{
  "manifest_version": 2,
  "name": "breakpoints",
  "version": "1.0",
  "description": "What is your breakpoint and where did it come from?.",
  "icons" : {
    "16": "icons/bp-ico16.png",
    "48": "icons/bp-ico16.png",
    "128": "icons/bp-ico16.png"
  },
  "browser_action": {
    "default_icon": "icons/bp-ico16.png",
    "default_popup": "src/copied.html"
  },
  "background": {
    "scripts": ["event.js"],
    "persistent": false
  },
  "permissions": [
    "<all_urls>",
    "clipboardWrite"
  ]
}
